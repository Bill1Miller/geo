<script language="JavaScript" type="text/javascript">
function valform() {
	if (contactform.name.value == "") {
	alert("Please enter your name.");
	contactform.name.focus;
	return false;
	}

	if (contactform.email.value == "") {
	alert("Please enter your e-mail address");
	contactform.email.focus;
	return false;
	}
	
	if (contactform.society.options[0].selected) {
	alert("Please tell us what your affiliation is");
	contactform.society.focus;
	return false;
	}
	
	
	if (contactform.chgadd.checked==true) {
	if (contactform.message.value == "") {
	alert("Please enter your old address");
	contactform.message.focus;
	return false;
	}
	if (contactform.newadd.value == "") {
	alert("Please enter your new address");
	contactform.newadd.focus;
	return false;
	}
	}


	if (contactform.message.value == "") {
	alert("Please enter your comments");
	contactform.message.focus;
	return false;
	}
return true;
}

function chkbx() {

if (document.contactform.chgadd.checked==true)
{
document.contactform.subject.disabled=true;
document.getElementById('regd').style.visibility=('hidden');
document.getElementById('msgtxt').style.visibility=('hidden');
document.getElementById('oldaddtxt').style.visibility=('visible');
document.getElementById('newaddtxt').style.visibility=('visible');
document.getElementById('newadd').style.visibility=('visible');
}
else
{
document.contactform.subject.disabled=false;
document.getElementById('regd').style.visibility=('visible');
document.getElementById('msgtxt').style.visibility=('visible');
document.getElementById('oldaddtxt').style.visibility=('hidden');
document.getElementById('newaddtxt').style.visibility=('hidden');
document.getElementById('newadd').style.visibility=('hidden');
}

}
</script>


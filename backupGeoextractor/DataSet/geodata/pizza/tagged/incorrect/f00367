function findpdf(){

   var l = document.links;

   function check(){
      var dest = this.pathname;
      var title = this.firstChild.data;
      dcsMultiTrack('DCS.dcsuri',dest,'WT.ti',title);
   }

   for (i = 0; i < l.length; i++){
      if(l[i].pathname.match(/\.pdf/)){
         if(!l[i].onclick){
            l[i].onclick=check;
         }
      }
   }
} // end findpdf

findpdf();



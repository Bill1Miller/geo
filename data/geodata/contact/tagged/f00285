// validate the form area to make sure that they fill out all fields.
function VALIDATE_FORM_FIELDS(myForm) {
if (myForm.email.value == "") {
	alert("Please enter a valid e-mail address.");
	myForm.email.focus();
	return false;
}



else {
	
		var email_pattern = /^(\w|-|\.)+\@([a-zA-Z0-9]|-)+\.(\w|\.)+/;// checks for a word character or '-' one or more times OR '.' followed by an '@' followed by [a-z] [A-Z] or [0-9] or '-' one or more times followed by a "." followed by a word character or "." one for more times.
		var email_result;
		email_result = email_pattern.exec(myForm.email.value);
		if (email_result) {
			
		}
		else  {
			alert("That is not a valid e-mail address.\nPlease try again.");
			myForm.email.focus();
			return false;
		}
	
// if everything passes, submit the form.
	return true;
}

}//close function


if (window != top)
	{
		top.location.href = location.href;
	}

function changeLocation(selVal) {
	//if(selVal != "null"){
	if(selVal != "null" && selVal !="blank"){
		if(selVal.indexOf('?') != -1){
			selVal = selVal.slice(0,-1);
			var newWindow = window.open(selVal, '', 'scrollbars,resizable,toolbar,status,menubar,location');
		} else {
			window.location.href = selVal;
		}
	}
}

function month(intMonth)
	{
		var MonthArray = new Array("January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December");
    	return MonthArray[intMonth];  	 
    }

function getDateStr()
	{
    	var today = new Date();
    	var year = today.getYear();
    	if(year<1000) year+=1900;
    	var todayStr = month(today.getMonth()) + " " + today.getDate() + ", " + year;
    	return todayStr;
    }

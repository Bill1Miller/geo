					<script language="javascript" type="text/javascript">
						window.station = "";
						cookieSave = document.cookie;
						window.cookieValue = cookieSave;
						stationFind = window.cookieValue.indexOf("station");
						if(stationFind > -1)
						{
							semiFind = window.cookieValue.indexOf(";", stationFind);
